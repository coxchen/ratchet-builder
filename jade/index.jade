extends layout

block jsext
    script(type="text/javascript", src="js/ratchet-builder.js")
    script(type="text/javascript", src="js/ratchet-builder-directives.js")
    script(type="text/javascript", src="js/ratchet-builder-services.js")

block content
    <!-- Masthead & navigation -->
    nav.docs-outer-wrapper.docs-masthead
        .docs-inner-wrapper
            ul.docs-navigation
                li.nav-item(data-ignore="push")
                    a(href="http://maker.github.com/ratchet/") Ratchet
                li.nav-item(data-ignore="push")
                    a(href="http://github.com/coxchen/ratchet-builder") View on Github

            h1.docs-masthead-title Ratchet-Builder

    .docs-outer-wrapper.docs-content(ng-controller="PrototypeCtrl")
        <!-- Components -->
        section.docs-outer-wrapper.content-section.section-components
            .docs-inner-wrapper
                .iphone.iphone-fixed
                    .iphone-content
                        //- #iwindow(iphone-window, content="prototypeSrc")
                        #iwindow.prototype-area(ng-view)

                article.component.coding-area.active
                    h3.component-title Coding Area
                    div
                        span.component-description Enter
                        #cm-mode.ratchet-component.toggle.active
                            .toggle-handle
                        span.component-description code and see the prototype immediately.
                    br
                    .tabbable
                        ul#code-tabs.nav.nav-tabs
                            li.active
                                a(href="#page1-tab", data-toggle="tab") page1.html
                            li
                                a(href="#page2-tab", data-toggle="tab") page2.html
                        .tab-content
                            #page1-tab.tab-pane.active
                                code-area#page1-code
                            #page2-tab.tab-pane
                                code-area#page2-code
                article.component.coding-area.active
                    h3.component-title JSON API
                    .input-prepend.input-append
                        .btn-group
                            button.btn.dropdown-toggle(style="height:40px;", data-toggle="dropdown")
                                span History
                                span.caret
                            ul.dropdown-menu
                                li(ng-repeat="item in historyItems")
                                    a(ng-click="recallHistory(item)") {{item}}
                        input#api(ng-model="api", type="text", style="width:400px;")
                        button.btn(style="height:40px;",ng-click="testAPI()") test
                    api-json
    script(type="text/ng-template", id="home.html")
        header.bar-title
            h1.title Ratchet Builder
        .content.content-padded
            strong Ratchet Builder Home
            ul.list.inset
                li
                    a(href="page1.html") Page 1
                    span.chevron
                li
                    a(href="page2.html") Page 2
                    span.chevron


    .docs-outer-wrapper.docs-footer
        section.content-section
            .docs-inner-wrapper
                h3 License &amp; credit
                p Ratchet-Builder is under the the MIT license, meaning you're basically free to use the framework as you please.
                p Ratchet-Builder was lovingly crafted by <a data-ignore="push" href="http://www.twitter.com/coxchen">Cox Chen</a>, based on <a href="http://maker.github.com/ratchet/">Ratchet</a>.

